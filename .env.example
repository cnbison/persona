# OpenAI API配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1  # 可选：如果使用代理或第三方API
OPENAI_MODEL=gpt-4-turbo-preview  # 或 gpt-4, gpt-3.5-turbo
OPENAI_TEMPERATURE=0.7

# 项目配置
PROJECT_NAME=AI著作跨时空对话播客
PROJECT_VERSION=1.0.0
DEBUG=true

# 文件路径
BOOKS_DIR=./data/books
OUTPUT_DIR=./data/output
PROMPTS_DIR=./data/prompts
LOGS_DIR=./logs

# 数据库配置（可选，用于存储结构化数据）
DATABASE_URL=sqlite:///./data/dialogue_podcast.db  # 默认使用SQLite

# 内容生成配置
EPISODES_PER_BOOK=10  # 每部著作生成10集
MIN_EPISODE_DURATION=25  # 单集最小时长（分钟）
MAX_EPISODE_DURATION=35  # 单集最大时长（分钟）

# 热点匹配配置
HOT_TOPIC_UPDATE_INTERVAL=24  # 热点更新间隔（小时）
HOT_TOPIC_RELEVANCE_THRESHOLD=0.8  # 热点相关性阈值

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5
